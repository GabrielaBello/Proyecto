<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="@drawable/fondoRegistro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                

                <LinearLayout
                    android:padding="24dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/logo_empresa"
                        android:layout_marginTop="9dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        android:text="ID usuario"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="number"
                        android:lines="1"
                        android:maxLines="1"
                        android:id="@+id/edID"
                        android:imeOptions="actionNext"
                        android:layout_marginStart="10dp"
                        android:hint="ID del usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        android:text="Nombre"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:maxLines="1"
                        android:id="@+id/edNombres"
                        android:imeOptions="actionNext"
                        android:layout_marginStart="10dp"
                        android:hint="Nombre del usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        android:text="Apellidos"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:id="@+id/edApellidos"
                        android:layout_marginStart="10dp"
                        android:hint="Apellidos del usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        android:text="Correo"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:id="@+id/edCorreo"
                        android:layout_marginStart="10dp"
                        android:hint="Correo del usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="usuario"
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:lines="1"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:id="@+id/edUsuario"
                        android:hint="usuario"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="210dp"
                android:layout_height="59dp"
                android:layout_marginTop="570dp"
                android:layout_marginStart="40dp"
                android:text="Registrarse"
                android:textSize="19sp" />

        </RelativeLayout>

    </LinearLayout>
